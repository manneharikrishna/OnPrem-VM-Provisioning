                       {% if item.add_disk|bool %} 
                       dynamic "disk" {
                             for_each = [ for disk in local.{{item.vm_name}}_adddisk_{{item.vm_name}}: disk ]
                          

                             content {
                              label       = "disk${disk.value.id}"
                              unit_number = disk.value.id
                              size        = disk.value.sizeGB
                               }

}
                       {% endif %}


      
